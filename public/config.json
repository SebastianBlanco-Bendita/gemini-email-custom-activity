{
    "workflowApiVersion": "1.1",
    "metaData": {
        "icon": "images/icon.png",
        "category": "message",
        "isConfigured": false
    },
    "type": "REST",
    "lang": {
        "es-ES": {
            "name": "Gemini Email Personalizado",
            "description": "Env√≠a emails personalizados usando IA de Gemini Pro."
        }
    },
    "arguments": {
        "execute": {
            "inArguments": [
                {
                    "ContactKey": "{{Contact.Key}}",
                    "Mail": "{{InteractionDefaults.Email}}",
                    "FirstName": "{{Contact.Attribute.TestCustomActivity.FirstName}}",
                    "City": "{{Contact.Attribute.TestCustomActivity.City}}",
                    "InterestCategory": "{{Contact.Attribute.TestCustomActivity.InterestCategory}}"
                }
            ],
            "outArguments": [],
            "url": "https://<TU_APP_URL>/execute",
            "verb": "POST",
            "useJwt": false,
            "timeout": 10000
        }
    },
    "configurationArguments": {
        "applicationExtensionKey": "gemini-email-activity-key",
        "save": { "url": "https://<TU_APP_URL>/save" },
        "publish": { "url": "https://<TU_APP_URL>/publish" },
        "validate": { "url": "https://<TU_APP_URL>/validate" },
        "stop": { "url": "https://<TU_APP_URL>/stop" }
    },
    "userInterfaces": {
        "configModal": { "height": 500, "width": 800 }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [
                    { "ContactKey": { "dataType": "Text", "isNullable": false, "direction": "in" }},
                    { "Mail": { "dataType": "EmailAddress", "isNullable": false, "direction": "in" }},
                    { "FirstName": { "dataType": "Text", "isNullable": true, "direction": "in" }},
                    { "City": { "dataType": "Text", "isNullable": true, "direction": "in" }},
                    { "InterestCategory": { "dataType": "Text", "isNullable": true, "direction": "in" }},
                    { "emailTemplate": { "dataType": "Text", "isNullable": false, "direction": "in" }},
                    { "subject": { "dataType": "Text", "isNullable": true, "direction": "in" }}
                ]
            }
        }
    }
}
